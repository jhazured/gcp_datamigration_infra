# GCP Environment Configuration
ENV={{ env | default('dev') }}

# Google Cloud Project ID
GCP_PROJECT_ID={{ gcp_project_id | default('my-gcp-project-dev') }}

# Google Cloud Region - Always Free Tier
GCP_REGION={{ gcp_region | default('us-central1') }}

# Google Cloud Zone - Always Free Tier
GCP_ZONE={{ gcp_zone | default('us-central1-a') }}

# Docker image full reference: repo/image_name:tag
DOCKER_IMAGE={{ docker_repo | default('us-central1-docker.pkg.dev/my-gcp-project-dev/etl-artifacts') }}/{{ docker_image_name | default('etl-app') }}:{{ docker_tag | default('latest') }}

# GCS Bucket name for this environment
GCS_BUCKET={{ gcs_bucket_name | default('my-gcp-project-dev-etl-data') }}

# Service Account Email
SERVICE_ACCOUNT_EMAIL={{ service_account_name | default('etl-vm-sa') }}@{{ gcp_project_id | default('my-gcp-project-dev') }}.iam.gserviceaccount.com

# Artifact Registry Repo
GCP_ARTIFACT_REPO={{ gcp_artifact_repo | default('us-central1-docker.pkg.dev/my-gcp-project-dev/etl-artifacts') }}

# Credentials Secret Name
GCP_CREDENTIALS_SECRET_NAME={{ gcp_credentials_secret_name | default('etl-service-account-key') }}

# Compute Instance
INSTANCE_NAME={{ instance_name | default('etl-vm-dev') }}
MACHINE_TYPE={{ machine_type | default('e2-micro') }}

# Network Configuration
NETWORK_NAME={{ network_name | default('data-network-dev') }}
SUBNET_NAME={{ subnet_name | default('data-subnet-dev') }}

