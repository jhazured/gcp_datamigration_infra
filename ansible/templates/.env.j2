# GCP Environment Configuration

# Environment name (dev, test, prod, etc.)
ENV={{ env }}

# Google Cloud Project ID
GCP_PROJECT_ID={{ gcp_project_id }}

# Google Cloud Region
GCP_REGION={{ gcp_region }}

# Docker image full reference: repo/image_name:tag
DOCKER_IMAGE={{ docker_repo }}/{{ docker_image_name }}:{{ docker_tag }}

# GCS Bucket name for this environment
GCS_BUCKET={{ gcs_bucket_name }}

# Service Account Email (optional)
# SERVICE_ACCOUNT_EMAIL={{ service_account_name }}@{{ gcp_project_id }}.iam.gserviceaccount.com

# Artifact Registry Repo
# GCP_ARTIFACT_REPO={{ gcp_artifact_repo }}

# Credentials Secret Name
# GCP_CREDENTIALS_SECRET_NAME={{ gcp_credentials_secret_name }}